---
import ConnectWalletDropdown from "./ConnectWalletDropdown.svelte";
import SunMoon from "./SunMoon.astro";

interface Props {
  isWallet: boolean;
}

const { isWallet } = Astro.props;
---

<div class="navbar w-full flex-col md:flex-row">
  <div class="navbar-start flex items-center justify-center md:justify-start">
    <SunMoon />
    <div class="text-xl font-bold">LiSuify</div>
  </div>
  <div class="navbar-end justify-center md:justify-end">
    {
      () => {
        if (isWallet) {
          return <ConnectWalletDropdown client:only />;
        }
      }
    }
  </div>
</div>
